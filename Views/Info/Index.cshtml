@model FormApplication.Models.Information

<form action="" method="post">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>
        
        <label for="id">ID:</label>
        <input type="text" id="id" name="id" required><br><br>

        <label>Gender:</label>
        <input type="radio" id="male" name="gender" value="Male" required>
        <label for="male">Male</label>
        <input type="radio" id="female" name="gender" value="Female" required>
        <label for="female">Female</label>
        <input type="radio" id="other" name="gender" value="Other" required>
        <label for="other">Other</label><br><br>

        <label for="profession">Profession:</label>
        <select id="profession" name="profession" required>
            <option value="Student">Student</option>
            <option value="Engineer">Engineer</option>
            <option value="Doctor">Doctor</option>
            <option value="Teacher">Teacher</option>
        </select><br><br>

        <label>Hobbies:</label><br>
        <input type="checkbox" id="gardening" name="hobbies[]" value="Gardening">
        <label for="gardening">Gardening</label><br>
        <input type="checkbox" id="travelling" name="hobbies[]" value="Travelling">
        <label for="travelling">Travelling</label><br>
        <input type="checkbox" id="reading" name="hobbies[]" value="Reading">
        <label for="reading">Reading</label><br>
        <input type="checkbox" id="videoCreation" name="hobbies[]" value="Video Creation">
        <label for="videoCreation">Video Creation</label><br><br>

        <input type="submit" value="Login">
    </form>

<div>
    @if (Model != null)
    {
        <h2>Registration Data:</h2>
        <p>Name: @Model.name</p>
        <p>ID: @Model.id</p>
        <p>Gender: @Model.gender</p>
        <p>Profession: @Model.profession</p>

        <h3>Hobbies:</h3>
        if (Model.hobbies != null)
        {
            <ul>
                @foreach (var hobby in Model.hobbies)
                {
                    <li>@hobby</li>
                }
            </ul>
        }
        else
        {
            <p>No hobbies selected.</p>
        }
    }
</div>
